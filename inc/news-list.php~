<?php

function get_list_news($news_item) {
    
    $output = '';
    $output = $output . '<h6>' . $news_item["date"] . '</h6>';
    $output = $output . '<p>' . $news_item["content"] . '</p>';

    return $output;
}

function get_list_shortnews($news_item) {
    
    $output = '';
    $output = $output . '<h6>' . $news_item["date"] . '</h6>';
    $output = $output . '<p>' . $news_item["short-content"] . '</p>';

    return $output;
}

